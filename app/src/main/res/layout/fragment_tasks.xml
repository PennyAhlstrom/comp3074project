<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.tasks.TasksFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tasksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"
            android:layout_marginBottom="16dp" />

        <!-- List of Task Cards -->
        <LinearLayout
            android:id="@+id/taskListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="none">

            <!-- Example Task Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/exampleTaskCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Task Title -->
                    <TextView
                        android:id="@+id/textTaskTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Final Project Report"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSecondary" />

                    <!-- Course -->
                    <TextView
                        android:id="@+id/textTaskCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course: COMP3074"
                        android:textSize="14sp"
                        android:textColor="@color/colorOnSecondary"
                        android:layout_marginTop="4dp" />

                    <!-- Priority -->
                    <TextView
                        android:id="@+id/textTaskPriority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority: High"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSecondary"
                        android:layout_marginTop="6dp" />

                    <!-- Due Date + Time -->
                    <TextView
                        android:id="@+id/textTaskDue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due: Nov 10, 2025 â€¢ 11:59 PM"
                        android:textSize="14sp"
                        android:textColor="@color/colorOnSecondary"
                        android:layout_marginTop="2dp" />

                    <!-- Status -->
                    <TextView
                        android:id="@+id/textTaskStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Completed"
                        android:textSize="14sp"
                        android:textColor="@color/colorOnSecondary"
                        android:layout_marginTop="6dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional task cards will go here dynamically -->
        </LinearLayout>

        <!-- Add New Task Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddTask"
            style="@style/Widget.MyApp.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Task"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_add_circle"
            app:iconGravity="textEnd"
            app:iconPadding="8dp" />

    </LinearLayout>

</ScrollView>
