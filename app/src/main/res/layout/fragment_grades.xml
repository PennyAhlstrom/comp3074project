<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Orange Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#F97316"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tvGradesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grades"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGradesSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 recorded grades"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Summary Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FB923C"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_margin="16dp"
                android:layout_marginBottom="0dp">

                <!-- Course Code -->
                <TextView
                    android:id="@+id/tvCourseCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Code"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <!-- Course Name -->
                <TextView
                    android:id="@+id/tvCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Course Name"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

                <!-- Label -->
                <TextView
                    android:id="@+id/tvCurrentAverage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Current Average"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

                <!-- Dynamic Average Value -->
                <TextView
                    android:id="@+id/tvAverageValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0%"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <!-- Weighted Total Explanation -->
                <TextView
                    android:id="@+id/tvWeightedTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Based on 0% of final grade"
                    android:textSize="13sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- RecyclerView: Dynamic Grades -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerGrades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
