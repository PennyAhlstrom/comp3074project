<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.reminders.ReminderDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Reminder Info Card (No Rounded Corners, with Inner Padding) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginBottom="24dp"
            android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/textReminderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title: Study Reminder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnSecondary"
                android:layout_margin="12dp" />

            <!-- Task -->
            <TextView
                android:id="@+id/textReminderTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task: Review Notes"
                android:textSize="16sp"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Course -->
            <TextView
                android:id="@+id/textReminderCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course: COMP3074"
                android:textSize="16sp"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Priority -->
            <TextView
                android:id="@+id/textReminderPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Priority: High"
                android:textSize="16sp"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Alert Date -->
            <TextView
                android:id="@+id/textReminderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 2025-11-03"
                android:textSize="16sp"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Alert Time -->
            <TextView
                android:id="@+id/textReminderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 9:00 AM"
                android:textSize="16sp"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Notes -->
            <TextView
                android:id="@+id/textReminderNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes: Review chapters 3â€“5 before the quiz."
                android:textSize="16sp"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditReminder"
            style="@style/Widget.MyApp.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            app:icon="@drawable/ic_edit"
            app:iconGravity="textEnd"
            app:iconPadding="8dp" />

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteReminder"
            style="@style/Widget.MyApp.Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            app:icon="@drawable/ic_delete"
            app:iconGravity="textEnd"
            app:iconPadding="8dp" />
    </LinearLayout>
</LinearLayout>
    </ScrollView>
