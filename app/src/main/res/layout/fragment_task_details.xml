<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.tasks.TaskDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Task Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginBottom="24dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title: Final Project Report"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_margin="12dp" />

                <TextView
                    android:id="@+id/textTaskCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course: COMP3074"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textTaskPriority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Priority: High"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textTaskStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Pending"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textTaskDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Due Date: 2025-11-10"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textTaskDueTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Due Time: 11:59 PM"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textTaskNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes: Submit PDF version on Blackboard."
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditTask"
                style="@style/Widget.MyApp.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textEnd"
                app:iconPadding="8dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteTask"
                style="@style/Widget.MyApp.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textEnd"
                app:iconPadding="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
