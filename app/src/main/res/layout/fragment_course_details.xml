<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.courses.CourseDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Course Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginBottom="24dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Name: Mobile App Development"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_margin="12dp" />

                <TextView
                    android:id="@+id/textCourseCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Code: COMP3074"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textInstructor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instructor: Dr. Smith"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Schedule: Mon and Wed, 9–11 AM"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textCourseNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes: Covers Android Studio and Kotlin."
                    android:textSize="16sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Associated Tasks -->
                <TextView
                    android:text="Associated Tasks:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/textAssociatedTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Lab 5 Submission — Completed\n• Final Project — Pending"
                    android:textSize="15sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp" />

                <!-- Associated Reminders -->
                <TextView
                    android:text="Associated Reminders:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/textAssociatedReminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Quiz Prep — Nov 5, 2025 • 10:00 AM\n• Submit Report — Nov 10, 2025 • 11:00 PM"
                    android:textSize="15sp"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditCourse"
                style="@style/Widget.MyApp.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textEnd"
                app:iconPadding="8dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteCourse"
                style="@style/Widget.MyApp.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textEnd"
                app:iconPadding="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
