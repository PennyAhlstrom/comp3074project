<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.courses.CoursesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/coursesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"
            android:layout_marginBottom="16dp" />

        <!-- List of Course Cards -->
        <LinearLayout
            android:id="@+id/courseListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="none">

            <!-- Example Course Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/exampleCourseCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Course Name -->
                    <TextView
                        android:id="@+id/textCourseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile App Development"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnSecondary" />

                    <!-- Course Code -->
                    <TextView
                        android:id="@+id/textCourseCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMP3074"
                        android:textSize="14sp"
                        android:textColor="@color/colorOnSecondary"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold" />

                    <!-- Tasks Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tasks:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSecondary"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:id="@+id/taskList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="4dp">

                        <!-- Example Task -->
                        <TextView
                            android:id="@+id/textExampleTask1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Lab 5 Submission — Completed"
                            android:textSize="14sp"
                            android:textColor="@color/colorOnSecondary" />

                        <TextView
                            android:id="@+id/textExampleTask2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Final Project — Pending"
                            android:textSize="14sp"
                            android:textColor="@color/colorOnSecondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Reminders Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminders:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSecondary"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:id="@+id/reminderList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="4dp">

                        <!-- Example Reminder -->
                        <TextView
                            android:id="@+id/textExampleReminder1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Quiz Prep — Nov 5, 2025 • 10:00 AM"
                            android:textSize="14sp"
                            android:textColor="@color/colorOnSecondary" />

                        <TextView
                            android:id="@+id/textExampleReminder2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Submit Report — Nov 10, 2025 • 11:00 PM"
                            android:textSize="14sp"
                            android:textColor="@color/colorOnSecondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional course cards will be added dynamically here -->
        </LinearLayout>

        <!-- Add New Course Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCourse"
            style="@style/Widget.MyApp.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Course"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_add_circle"
            app:iconGravity="textEnd"
            app:iconPadding="8dp" />

    </LinearLayout>
</ScrollView>
