<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.tasks.TaskFormFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Title -->
        <TextView
            android:id="@+id/formTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Course Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <AutoCompleteTextView
                android:id="@+id/dropdownCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp"
                android:entries="@array/sample_courses" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Type and Bonus Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Type Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type"
                app:boxStrokeColor="@color/colorOnSecondary">

                <AutoCompleteTextView
                    android:id="@+id/dropdownType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/colorOnSecondary"
                    android:textSize="16sp"
                    android:entries="@array/task_types" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Small Spacer -->
            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <!-- Bonus Toggle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonus"
                    android:textColor="@color/colorOnSecondary"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchBonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Worth (%) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Percentage Worth (%)"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputWorth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp"
                tools:text="15" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mark Achieved - Removed this for Screenshot so it wouldn't be too long to view the entire form-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mark Achieved (%)"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputMark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp"
                tools:text="85" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Priority Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Priority Level"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <AutoCompleteTextView
                android:id="@+id/dropdownPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp"
                android:entries="@array/priority_levels" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Status Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <AutoCompleteTextView
                android:id="@+id/dropdownStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp"
                android:entries="@array/status_options" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Due Date -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Due Date"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp"
                tools:text="2025-11-10" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Due Time -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Due Time"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp"
                tools:text="11:59 PM" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes"
            app:boxStrokeColor="@color/colorOnSecondary"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:textColor="@color/colorOnSecondary"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.MyApp.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                app:icon="@drawable/ic_close"
                app:iconGravity="textEnd"
                app:iconPadding="8dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveTask"
                style="@style/Widget.MyApp.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save Task"
                app:icon="@drawable/ic_check"
                app:iconGravity="textEnd"
                app:iconPadding="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
