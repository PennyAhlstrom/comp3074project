<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- Home screen -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.comp3074project.ui.home.HomeFragment"
        android:label="Home" />

    <!-- Reminders screen -->
    <fragment
        android:id="@+id/navigation_reminders"
        android:name="com.example.comp3074project.ui.reminders.RemindersFragment"
        android:label="Reminders">

        <!-- Navigation action to open Add Reminder screen -->
        <action
            android:id="@+id/action_navigation_reminders_to_addReminderFragment"
            app:destination="@id/addReminderFragment" />
    </fragment>

    <!-- Tasks screen (main tasks UI) -->
    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.comp3074project.ui.tasks.TasksFragment"
        android:label="Tasks" />

    <!-- Courses screen -->
    <fragment
        android:id="@+id/navigation_courses"
        android:name="com.example.comp3074project.ui.courses.CoursesFragment"
        android:label="Courses" />

    <!-- Grades screen -->
    <fragment
        android:id="@+id/navigation_grades"
        android:name="com.example.comp3074project.ui.grades.GradesFragment"
        android:label="Grades" />

    <!-- Add Reminder screen (opened ONLY from RemindersFragment) -->
    <fragment
        android:id="@+id/addReminderFragment"
        android:name="com.example.comp3074project.ui.reminders.AddReminderFragment"
        android:label="Add Reminder" />

</navigation>
