<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- Home -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.comp3074project.ui.home.HomeFragment"
        android:label="Home">

        <!-- Home → Reminders -->
        <action
            android:id="@+id/action_home_to_reminders"
            app:destination="@id/navigation_reminders" />
        <!-- Home → Tasks -->
        <action
            android:id="@+id/action_home_to_tasks"
            app:destination="@id/navigation_tasks" />
        <!-- Home → Courses -->
        <action
            android:id="@+id/action_home_to_courses"
            app:destination="@id/navigation_courses" />
        <!-- Home → Grades -->
        <action
            android:id="@+id/action_home_to_grades"
            app:destination="@id/navigation_grades" />
    </fragment>

    <!-- Reminders -->
    <fragment
        android:id="@+id/navigation_reminders"
        android:name="com.example.comp3074project.ui.reminders.RemindersFragment"
        android:label="Reminders">
        <action
            android:id="@+id/action_navigation_reminders_to_addEditReminder"
            app:destination="@id/addEditReminderFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditReminderFragment"
        android:name="com.example.comp3074project.ui.reminders.AddEditReminderFragment"
        android:label="Add/Edit Reminder">
        <action
            android:id="@+id/action_addEditReminder_to_navigation_reminders"
            app:destination="@id/navigation_reminders" />
    </fragment>

    <!-- Tasks -->
    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.comp3074project.ui.tasks.TasksFragment"
        android:label="Tasks">

        <!-- Navigate to Add Task -->
        <action
            android:id="@+id/action_navigation_tasks_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />

        <!-- Navigate to Edit Task -->
        <action
            android:id="@+id/action_navigation_tasks_to_editTaskFragment"
            app:destination="@id/editTaskFragment" />
    </fragment>

    <!-- Add Task Fragment -->
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.example.comp3074project.ui.tasks.AddTaskFragment"
        android:label="Add Task">
        <action
            android:id="@+id/action_addTaskFragment_to_navigation_tasks"
            app:destination="@id/navigation_tasks" />
    </fragment>

    <!-- Edit Task Fragment -->
    <fragment
        android:id="@+id/editTaskFragment"
        android:name="com.example.comp3074project.ui.tasks.EditTaskFragment"
        android:label="Edit Task">
        <argument
            android:name="taskId"
            app:argType="integer" />
    </fragment>

    <!-- Courses -->
    <fragment
        android:id="@+id/navigation_courses"
        android:name="com.example.comp3074project.ui.courses.CoursesFragment"
        android:label="Courses">

        <!-- Navigate to Add Course -->
        <action
            android:id="@+id/action_navigation_courses_to_addCourseFragment"
            app:destination="@id/addCourseFragment" />

        <!-- Navigate to Edit Course -->
        <action
            android:id="@+id/action_navigation_courses_to_editCourseFragment"
            app:destination="@id/editCourseFragment" />
    </fragment>

    <fragment
        android:id="@+id/addCourseFragment"
        android:name="com.example.comp3074project.ui.courses.AddCourseFragment"
        android:label="Add Course">
        <action
            android:id="@+id/action_addCourseFragment_to_navigation_courses"
            app:destination="@id/navigation_courses" />
    </fragment>

    <fragment
        android:id="@+id/editCourseFragment"
        android:name="com.example.comp3074project.ui.courses.EditCourseFragment"
        android:label="Edit Course">
        <argument
            android:name="courseId"
            app:argType="integer" />
        <action
            android:id="@+id/action_editCourseFragment_to_navigation_courses"
            app:destination="@id/navigation_courses" />
    </fragment>

    <!-- Grades -->
    <fragment
        android:id="@+id/navigation_grades"
        android:name="com.example.comp3074project.ui.grades.GradesFragment"
        android:label="Grades">
        <action
            android:id="@+id/action_navigation_grades_to_addGradeFragment"
            app:destination="@id/addGradeFragment" />
    </fragment>

    <fragment
        android:id="@+id/addGradeFragment"
        android:name="com.example.comp3074project.ui.grades.AddGradeFragment"
        android:label="Add Grade">
        <action
            android:id="@+id/action_addGradeFragment_to_navigation_grades"
            app:destination="@id/navigation_grades" />
    </fragment>

</navigation>
